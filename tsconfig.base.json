{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      ":dungeon-adventure/common-constructs": [
        "packages/common/constructs/src/index.ts"
      ],
      ":dungeon-adventure/common-types": ["packages/common/types/src/index.ts"],
      ":dungeon-adventure/game-api-backend": [
        "packages/game-api/backend/src/index.ts"
      ],
      ":dungeon-adventure/game-api-schema": [
        "packages/game-api/schema/src/index.ts"
      ]
    }
  }
}
